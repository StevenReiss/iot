<body class='login-page' >

{{> topnav}}

<div class='form container'>
   <form id='login-form' class='form-horizontal login-form'>
       <div class='login-text row'>
	  <span>Sign into your iQsign account</span>
       </div>
       <br/>
       <div class='form-group row'>
	  <label for='username' class='inputlabel col-form-label col-sm-3'>User: </label>
	  <div class='col-sm-9'>
	     <input type='text' name='username' id='login-username' class='form-control input'
		 required placeholder='Enter email or user id' value='{{username}}' />
	  </div>
       </div>
       <div class='form-group row'>
	  <label for='password' class='inputlabel col-form-label col-sm-3'>Password: </label>
	  <div class='col-sm-9'>
	     <input type='password' name='password' id='login-password' class='form-control input'
		 required placeholder='Enter password' value='{{password}}' />
	  </div>
       </div>
       <div class='row'>
	  <span id='login-error' class='error hidden'></span>
       </div>
       <div class='row form-group'>
	  <div class='offset-md-3 col-sm-9'>
	     <input type='hidden' name='padding' id='login-padding' value='{{padding}}' />
	     <input type='hidden' name='redirect' id='login-redirect' value='{{redirect}}' />
	     <button type='submit' class='btn btn-primary'>Login</button>
	  </div>
       </div>
       <br/>
       <div>
	  <span>
	     <a href='/forgotpassword' class='login-link'>Forgot Password</a>&nbsp;&nbsp;
	     <a href='/register' class='login-link'>Not a user? Register</a>
	  </span>
       </div>
    </form>
<div>

{{> botnav}}

<script>

$(function() {
   $("#login-password").keyup(event => handleLoginEnter(event));
   $("#login-form").submit(event => handleLoginSubmit(event));
});

</script>

</body>





















